<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.italo.sistemaead">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.StartActivity"></activity>
        <activity
            android:name=".activity.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.NotesEvaluationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToobarThemeEAD" />
        <activity
            android:name=".activity.EvaluationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToobarThemeEAD" />
        <activity
            android:name=".activity.PlayerVideoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.MenuClassActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToobarThemeEAD" />
        <activity
            android:name=".activity.MyCoursesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToobarThemeEAD" />
        <activity
            android:name=".activity.DetailsCourseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToobarThemeEAD" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>