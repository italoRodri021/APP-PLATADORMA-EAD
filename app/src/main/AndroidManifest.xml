<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.italo.sistemaead">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activitys.InicioActivity"></activity>
        <activity
            android:name=".activitys.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".activitys.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.BoasVindasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.NotasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TootbarTelas" />
        <activity
            android:name=".activitys.AvaliacaoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TootbarTelas" />
        <activity
            android:name=".activitys.PlayerVideoActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activitys.MenuAulasActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TootbarTelas" />
        <activity
            android:name=".activitys.MeusCursosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TootbarTelas" />
        <activity
            android:name=".activitys.DetalhesCursoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TootbarTelas" />
        <activity
            android:name=".activitys.EditarPerfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activitys.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>